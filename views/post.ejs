<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <%- include('partials/_pageheader') -%>


  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h1 class="section-heading"><%= post.title %></h1>
          <p ><%= post.description %></p>
          <p ><%= post.date %></p>

          <a href="/post/edit/<%= post._id %>" type="update" class="btn btn-primary" id="sendMessageButton">Update Details</a>
          <a href="/post/<%= post._id %>?_method=DELETE" type="delete" class="btn btn-primary" id="sendMessageButton"
            onclick="return confirm ('ARE YOU SURE?')">Delete Blog</a>
        
           </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
